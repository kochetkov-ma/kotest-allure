# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = false
max_line_length = 140

[*.md]
max_line_length = off

[*.{kt, kts, java}]
max_line_length = 160

[*.{yml, yaml}]
indent_size = 2
max_line_length = 200